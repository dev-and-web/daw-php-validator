    "license": "MIT",
    "authors": [
        {
            "name": "Stephen Damian",
            "email": "contact@devandweb.fr",
            "homepage": "https://www.devandweb.fr",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "contact@devandweb.fr",
        "issues": "https://github.com/dev-and-web/daw-php-validator/issues",
        "source": "https://github.com/dev-and-web/daw-php-validator",
        "docs": "https://github.com/dev-and-web/daw-php-validator/tree/master/docs/en"
